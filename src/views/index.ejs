<%- include('includes/head')%>
  <%- include('includes/nav')%>
  
  <div class="containerTable">
    
    <div class="containerCont">
        
        <div class="alinharTexto">
          <h1 class="titleTable">Agenda</h1>
          <p class="subTitleTable">Seus contatos abaixo:</p>
        </div>
          
        <%- include('includes/messagens')%>
          

          <div class="header_fixed">

            <table>
              <thead>
                <tr>
                  <th scope="col">Nome</th>
                  <th scope="col">Sobrenome</th>
                  <th scope="col">Tel</th>
                  <th scope="col">E-mail</th>
                  <th class="alinharTexto">Ações</th>
                </tr>
              </thead>
              <tbody>
                <% contatos.forEach(user => { %>
                <tr>
  
                  <td scope="row"><%= user.nome %></td>
                  <td><%= user.sobrenome %></td>
                  <td><%= user.telefone %></td>
                  <td><%= user.email %></td>
                  <td class="alinharTexto">
                    <a  href="/contato/index/<%= user._id%>"><button class="btn btn-warning">Editar</button></a>
                    <a href="/contato/delete/<%= user._id%>"><button class="btn btn-danger">Excluir</button></a>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>

          </div>
        
        </div>

        

      

    </div>

    <%- include('includes/footer')%>